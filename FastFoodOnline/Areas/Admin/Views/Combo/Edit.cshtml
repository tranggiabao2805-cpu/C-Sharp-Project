@model FastFoodOnline.ViewModels.Admin.ComboCreateViewModel
@using FastFoodOnline.Enums
@{
    ViewData["Title"] = "Sửa Combo";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<ItemStatus>()"></select>
    </div>

    <div class="form-group">
        <label>Chọn món ăn</label>
        <table class="table custom-table">
            <thead>
                <tr>
                    <th>Chọn</th>
                    <th>Tên món</th>
                    <th>Số lượng</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Items.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="checkbox" asp-for="Items[@i].Selected" class="form-check-input" />
                            <input type="hidden" asp-for="Items[@i].FoodItemId" />
                            <input type="hidden" asp-for="Items[@i].Name" />
                        </td>
                        <td>@Model.Items[i].Name</td>
                        <td>
                            <input asp-for="Items[@i].Quantity" class="form-control" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
<style>
    .custom-table {
        border-collapse: collapse;
        width: 100%;
    }

        .custom-table th,
        .custom-table td {
            border: none;
            padding: 8px;
        }

        .custom-table tbody tr {
            border-bottom: 1px solid #ccc;
        }

        .custom-table thead {
            border-bottom: 2px solid #666;
        }
</style>