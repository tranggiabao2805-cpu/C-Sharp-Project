@model IEnumerable<FastFoodOnline.ViewModels.Admin.UserListViewModel>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý Người dùng";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<div class="card card-mgmt">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Quản lý Người dùng</h5>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped table-hover align-middle">
            <thead class="table-secondary">
                <tr>
                    <th class="text-center" style="width:5%">#</th>
                    <th style="width:30%">Email</th>
                    <th style="width:35%">Họ và tên</th>
                    <th class="text-center" style="width:20%">Vai trò</th>
                    <th class="text-center" style="width:10%">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="text-center">@user.Id</td>
                        <td>@user.Email</td>
                        <td>@user.FullName</td>
                        <td class="text-center">@user.Role</td>
                        <td class="text-center">
                            <a asp-area="Admin"
                               asp-controller="User"
                               asp-action="Edit"
                               asp-route-id="@user.Id"
                               class="btn btn-sm btn-primary">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>

                            <form action="/Admin/User/DeleteConfirmed/@user.Id" method="post" style="display:inline">
                                <input name="__RequestVerificationToken" type="hidden" value="@Antiforgery.GetTokens(Context).RequestToken" />
                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                        onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này không?');">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>