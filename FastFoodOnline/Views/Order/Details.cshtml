@model Order

<h2>Chi tiết đơn hàng</h2>

<p><strong>Địa chỉ:</strong> @Model.User?.Address</p>
<p><strong>Số điện thoại:</strong> @Model.User?.PhoneNumber</p>
<p><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
<p><strong>Trạng thái:</strong> @Model.Status</p>

<table class="table">
    <thead>
        <tr>
            <th>Món ăn / Combo</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
            <th>Ghi chú</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>
                    @if (item.FoodItem != null)
                    {
                        @item.FoodItem.Name
                    }
                    else if (item.Combo != null)
                    {
                        @item.Combo.Name
                    }
                    else
                    {
                        <span>Không xác định</span>
                    }
                </td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("N0") ₫</td>
                <td>@((item.Quantity * item.UnitPrice).ToString("N0")) ₫</td>
                <td>@item.Note</td>
            </tr>
        }
    </tbody>
</table>

<p><strong>Tổng tiền:</strong> @Model.TotalOrderAmount.ToString("N0") ₫</p>
