<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - FastFoodOnline</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        :root {
            /* Nền chính và text chính */
            --bg-light: #FAFAFA;
            --text-primary: #333333;
            /* Màu chủ đạo (buttons, header card) */
            --clr-primary: #FF6A00;
            /* Màu nhấn (hover, accent) */
            --clr-accent: #FFD500;
            /* Bóng, bo góc, chuyển tiếp */
            --radius: 0.75rem;
            --transition: 0.3s ease;
            --shadow-soft: 0 5px 15px rgba(0,0,0,0.1);
        }

        /* Toàn trang */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--bg-light);
            color: var(--text-primary);
            line-height: 1.6;
        }

        a {
            text-decoration: none;
            transition: var(--transition);
        }

            a:hover {
                opacity: 0.8;
            }

        /* Navbar */
        .navbar {
            background-color: var(--text-primary);
            box-shadow: var(--shadow-soft);
        }

        .navbar-brand {
            font-weight: 600;
            color: var(--clr-accent) !important;
        }

        .nav-link {
            color: #fff !important;
            margin-right: 1rem;
            font-weight: 500;
        }

            .nav-link.active,
            .nav-link:hover {
                color: var(--clr-accent) !important;
            }

        /* Card quản lý */
        .card-mgmt {
            background-color: #fff;
            border-radius: var(--radius);
            box-shadow: var(--shadow-soft);
            overflow: hidden;
            transition: transform var(--transition), box-shadow var(--transition);
        }

            .card-mgmt:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0,0,0,0.12);
            }

            .card-mgmt .card-header {
                background-color: var(--clr-primary);
                color: #fff;
                font-weight: 600;
            }

            .card-mgmt .card-body {
                padding: 1.25rem;
                color: var(--text-primary) !important;
            }

            .card-mgmt .text-muted {
                color: #666 !important;
            }

        /* Button quản lý */
        .btn-mgmt {
            background-color: var(--clr-primary);
            color: #fff;
            border-radius: var(--radius);
            box-shadow: var(--shadow-soft);
            transition: var(--transition);
        }

            .btn-mgmt:hover {
                background-color: var(--clr-accent);
                color: var(--text-primary);
            }

        /* Footer */
        .site-footer {
            background-color: var(--text-primary);
            color: #ddd;
        }

            .site-footer a {
                color: #fff;
            }

                .site-footer a:hover {
                    color: var(--clr-accent);
                }

        .footer-social a {
            display: inline-block;
            margin-right: 0.5rem;
            color: #fff;
            font-size: 1.25rem;
            transition: var(--transition);
        }

            .footer-social a:hover {
                color: var(--clr-accent);
                transform: translateY(-2px);
            }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    @* Navbar chung *@
    @await Html.PartialAsync("_NavBar")

    @* Nội dung chính *@
    <main class="container flex-fill py-4">
        @RenderBody()
    </main>

    @* Footer chung *@
    <footer class="site-footer pt-5 pb-3 mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>FastFoodOnline</h5>
                    <p>Đem tới bữa ăn nhanh chất lượng, tiện lợi và giá tốt.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h6>Liên kết nhanh</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                        <li><a asp-controller="FoodItem" asp-action="Index">Thực đơn</a></li>
                        <li><a asp-controller="Account" asp-action="Login">Đăng nhập</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h6>Kết nối với chúng tôi</h6>
                    <div class="footer-social">
                        <a href="#"><i class="fab fa-facebook-square"></i></a>
                        <a href="#"><i class="fab fa-instagram-square"></i></a>
                        <a href="#"><i class="fab fa-youtube-square"></i></a>
                    </div>
                </div>
            </div>
            <hr class="border-light" />
            <div class="text-center small">
                © @DateTime.Now.Year FastFoodOnline. Bản quyền thuộc về FastFoodOnline.
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>